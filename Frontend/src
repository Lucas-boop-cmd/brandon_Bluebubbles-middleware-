// Load environment variables
const API_URL = process.env.REACT_APP_API_URL || 'http://localhost:3000';

// Ensure Netlify environment variables are handled
const NETLIFY_API_URL = process.env.REACT_APP_NETLIFY_API_URL || API_URL;

// Example usage of the environment variable
console.log(`Connecting to API at: ${API_URL}`);

// Log the Netlify-specific API URL
console.log(`Netlify API URL: ${NETLIFY_API_URL}`);

// Production build setup
if (process.env.NODE_ENV === 'production') {
    console.log('Running in production mode');
    // Add any production-specific logic here
} else {
    console.log('Running in development mode');
}

// Export necessary configurations if needed
export { API_URL, NETLIFY_API_URL };


